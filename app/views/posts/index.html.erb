<%= stylesheet_link_tag "post.css" %>

<% content_for :page_author,  "Index" %>
<nav class="navbar navbar-inverse" >
  <div class="container-fluid">
  
    <div class="navbar-header">
      <a class="navbar-brand" href="/posts"> 
       <span style= "color: #1d66f7 ; font-size: 33px ;font-weight: bold;">Blogbook</span>
       </a>
    </div>
    <div class="example" style ="position: absolute; left: 350px;
    top: 10px;" > <%= image_tag('search.png' , :size =>'20x20', :alt =>'logo' ) %> search</div>
      <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="/profile"> 
              <%= image_tag('profile.png' , :size =>'30x30', :alt =>'logo' ) %> 
              <span style= "color: #1d66f7 ; font-size: 20px ;">
              <%= @user.f_name%><%=" "%><%= @user.l_name%>
              </span>
              </a>
          </li>
      </ul>
    </div>
  </div>
</nav>
  
<div class="container-fluid ">    
  <div class="row content">
    <div class="col-sm-3 ">
    </div>

    <div class="col-sm-5 text-left"> 


      <div class="create_new_blog">
      <a href="/posts/new"><div style=" display: flex;
      flex-direction: row;" > <div  style="height:40px" > <%= image_tag('profile.png' , :size =>'40x40', :alt =>'logo' ) %></div> 
      <div class="example" > Whats your mind,<%= @user.f_name%>?</div></div></a>
      
      <hr>
      <div style="display: flex;
      justify-content: space-around;">  
      <div> <%= image_tag('live_video.png' , :size =>'30x30', :alt =>'logo' ) %></div> 
      <div> <%= image_tag('photo_video.png' , :size =>'30x30', :alt =>'logo' ) %></div>
      <div> <%= image_tag('feeling.png' , :size =>'30x30', :alt =>'logo' ) %></div>

      </div>
     </div>

    
    <% @post.each do |post| %>  
      <div class ="main_content">
      <h4 style=" padding: 3px 0px 0px 15px;"> <%= link_to post.author, post  %> </h4>
      <p style=" border-top: 1px solid rgb(199, 195, 195); padding: 10px;"><%= post.description %></p>
      <div  style=" padding: 10px;">
       <%= post.comments.count %>
      </div>

    
      <div  style=" display: flex; 
       padding: 10px  50px 15px 50px;
       border-top: 1px solid rgb(199, 195, 195);
      justify-content: space-between !important"> 
      <span><%= link_to 'Like',post%></span>
      <span><%= link_to 'Comment',new_post_comment_path(post)%>
      </span>
      <span><%= link_to 'Share', post, method: :Delete, data: {confirm: "Are you sure ?"}%></span>
      </div>
      </div>
      
      <% end %>
    </div>
    <div class="col-sm-4 ">
    </div>
    
  </div>
</div>

<footer class="container-fluid text-center">
  <p>Footer Text</p>
</footer>


