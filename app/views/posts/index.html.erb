<%= stylesheet_link_tag "post.css" %>

<% content_for :page_title,  "Index" %>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
  
    <div class="navbar-header">
      <p class="navbar-brand" href="#"> 
       <span style= "color: #1d66f7 ; font-size: 33px ;font-weight: bold;">Blogbook</span>
       </p>
    </div>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">  <span style= "color: #1d66f7 ; font-size: 20px ;"> Profile</span></li>
      </ul>
    </div> <div></div>
  </div>
</nav>
  
<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-3 ">
    </div>
    <div class="col-sm-5 text-left"> 
    <% @post.each do |post| %>  
      <div class ="main_content">
      <h4 style=" padding: 3px 0px 0px 15px;"> <%= link_to post.author, post  %> </h4>
      <p style=" border-top: 1px solid rgb(199, 195, 195); padding: 10px;"><%= post.description %></p>
      <div  style=" padding: 10px;"> <%= post.comments.count %>
      
      </div>
      <div  style=" display: flex; 
       padding: 10px  50px 15px 50px;
       border-top: 1px solid rgb(199, 195, 195);
      justify-content: space-between !important"> 
      <span><%= link_to 'Like',post%></span>
      <span><%= link_to 'Comment',edit_post_path(post)%></span>
      <span><%= link_to 'Share', post, method: :Delete, data: {confirm: "Are you sure ?"}%></span>
      </div>
      </div>
      
      <% end %>
    </div>
    <div class="col-sm-4 ">
    </div>
    
  </div>
</div>

<footer class="container-fluid text-center">
  <p>Footer Text</p>
</footer>


